<html>
  <head>
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js'></script>
    <script src='http://localhost:8080/roadrunner-tomcat/js/roadrunner.js'></script>
  </head>
  <body>
    <div id='messagesDiv'></div>
    <script>
      var myDataRef = new Roadrunner('ws://localhost:8080/roadrunner-tomcat/rr/roadrunner/todos');
      myDataRef.on('child_added', function(snapshot) {
        var message = snapshot.val();
	console.log(message);
        displayChatMessage(message.title, message.done);
      });
      function displayChatMessage(name, text) {
        $('<div/>').text(text).prepend($('<em/>').text(name+': ')).appendTo($('#messagesDiv'));
        $('#messagesDiv')[0].scrollTop = $('#messagesDiv')[0].scrollHeight;
      };
    </script>
  </body>
</html>
